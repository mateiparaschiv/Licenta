@*<partial name="_AddReview.cshtml" model="Model">*@

@using (Html.BeginForm("AddReview", "Reviews", FormMethod.Post, Model))
{
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="albumModalLabel">Add review for @Model.Subject</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="form-container">
                <form method="post" action="/Revies/AddReview">
                    <div class="container">
                        <input id="input-1" name="input-1" class="rating rating-loading" data-min="0" data-max="5" data-step="0.5" value="" data-size="lg">
                        @*<input id="input-id" type="text" class="rating" data-size="lg">*@
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Title" class="col-form-label" Text="{Binding Name}">Title</label>
                        <input asp-for="@Model.Title" class="form-control" autocomplete="" aria-required="true" placeholder="" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="@Model.Message" class="col-form-label">What do you have to say about it?</label>
                        <textarea asp-for="@Model.Message" class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Post review</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
}   