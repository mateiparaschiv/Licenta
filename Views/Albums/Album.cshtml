@*@using Microsoft.Extensions.Configuration
@inject IConfiguration _configuration*@
@model AlbumModel
@{
    //ViewData["Title"] = "Index Albums";
    var album = Model;
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="row py-4 g-0">
    <div class="col-md-4" id="image_col">
        <img src="@album.Image">
        <ul class="list-group list-group-flush list-group-numbered">
            @*
            justify-content-center text-right
            *@
            @foreach (var song in @album.Songs.ToList())
            {
                <li class="list-group-item ">
                    <span>@song</span>
                </li>
            }
        </ul>
    </div>

    <div class="col-md-8">
        <div class="card-body">
            <h1 class="display-4">@album.Name</h1>
            <a class="nav-link active p-0" asp-controller="Artist" asp-action="Index" asp-route-name="@album.Artist">
                <h1 class="display-6" id="link">
                    <u>
                        @album.Artist
                    </u>
                </h1>
            </a>
            <div class="d-flex flex-wrap justify-content-between align-items-center py-3  border-top">
                @*<span class="text-begin mb-3 mb-md-0">@artist.Genre</span>
                <span class="text-center mb-3 mb-md-0">@artist.Year</span>
                <span class="text-end mb-3 mb-md-0">@artist.Rating</span>*@

                <div class="container g-0">
                    <div class="row row-cols-3">
                        <span class="col text-begin mb-3 mb-md-0">Genre</span>
                        <span class="col text-center mb-3 mb-md-0">Year</span>
                        <span class="col text-end mb-3 mb-md-0">Rating</span>
                        <span class="col text-begin mb-3 mb-md-0">@album.Genre</span>
                        <span class="col text-center mb-3 mb-md-0">@album.Year</span>
                        <span class="col text-end mb-3 mb-md-0">@album.Rating/5</span>
                    </div>
                </div>
            </div>
            <p class="card-text indent">@album.Description</p>
        </div>
    </div>
</div>