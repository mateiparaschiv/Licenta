@using LicentaApp.Models.ViewModels
@model IndexGenreListViewModel
@{
    //ViewData["Title"] = "Index Albums";
    var genreList = Model.GenreList;
    var sortOrder = Model.SortOrder;
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="d-flex justify-content-between bd-highlight">
    <div class="d-flex align-items-center justify-content-between">
        <h2 class="text-muted">Genres</h2>
    </div>
    <div class="d-flex align-items-center justify-content-between">
        <span class="text-muted">
            @{
                if (sortOrder.Equals("name_asc") || sortOrder.Equals(""))
                {
                    <a id="sort_buttons" asp-controller="Genres" asp-action="Index" asp-route-sortOrder="name_desc">
                        <i id="sort_buttons" class="bi bi-sort-alpha-down-alt"></i>
                    </a>
                }
                else
                {
                    <a id="sort_buttons" asp-controller="Genres" asp-action="Index" asp-route-sortOrder="">
                        <i id="sort_buttons" class="bi bi-sort-alpha-down"></i>
                    </a>
                }
            }
        </span>
    </div>
</div>
@foreach(var genre in genreList)
{
    <div class="row justify-content-center py-4 g-0">
        <div class="col-md-8">
            <div class="card-body">
                <a class="nav-link active p-0" asp-controller="Genres" asp-action="Genre" asp-route-name="@genre.Name">
                    <h1 id="link">
                        <i>
                            @genre.Name
                        </i>
                    </h1>
                </a>
                <p class="card-text indent">@genre.Description</p>
            </div>
        </div>
    </div>
}