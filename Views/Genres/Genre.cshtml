@using LicentaApp.Models.ViewModels
@model IndexGenreNameViewModel
@{
    //ViewData["Title"] = "Index Albums";
    var genre = Model.Genre;
    var genreAlbums = Model.GenreAlbums;
    var rand = new Random();
    //var album2 = genreAlbums[1];
}
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<div class="row py-4 g-0">
    <div class="col-md-3" id="image_col">
        <div class="photo-container">
            @for(int i = 0; i < 3; i++)
            {
                @*<img src="@genreAlbums[rand.Next(genreAlbums.Count())].Image">*@
                <img src="~/images/Albums/@(genreAlbums[rand.Next(genreAlbums.Count())].Name).jpg">
            }
        </div>
    </div>
    <div class="col-md-9">
        <div class="card-body">
            <p class="display-4">@genre.Name</p>
            <div class="d-flex flex-wrap justify-content-between align-items-center py-3 border-top">
                @*<span class="text-begin mb-3 mb-md-0">@artist.Genre</span>
                <span class="text-center mb-3 mb-md-0">@artist.Year</span>
                <span class="text-end mb-3 mb-md-0">@artist.Rating</span>*@

                @*<div class="container g-0">
                <div class="row row-cols-3">
                <span class="col text-begin mb-3 mb-md-0">Genre</span>
                <span class="col text-center mb-3 mb-md-0">Year</span>
                <span class="col text-end mb-3 mb-md-0">Rating</span>
                <span class="col text-begin mb-3 mb-md-0">@album.Genre</span>
                <span class="col text-center mb-3 mb-md-0">@album.Year</span>
                <span class="col text-end mb-3 mb-md-0">@album.Rating/5</span>
                </div>
                </div>*@
            </div>
            <p class="card-text indent">@genre.Description</p>
        </div>
    </div>
</div>
<div class="d-flex justify-content-between bd-highlight">
    <div class="d-flex align-items-center justify-content-between">
        <h1 class="text-muted">Some @genre.Name records</h1>
    </div>
</div>
<div class=" container py-4 g-0">
    <div class="row justify-content">
        @foreach (var album in genreAlbums)
        {
            <div class="text-center col-md-4 ">
                <a class="nav-link active p-0" asp-controller="Albums" asp-action="Album" asp-route-name="@album.Name">
                    <img src="~/images/Albums/@(album.Name).jpg" id="album_col">
                </a>
                <a class="nav-link active p-0" asp-controller="Albums" asp-action="Album" asp-route-name="@album.Name">
                    <i class="" id="link">
                        @album.Name
                    </i>
                </a>
                <a class="nav-link active p-0 mb-3" asp-controller="Albums" asp-action="Album" asp-route-name="@album.Name">
                    <i class="" id="link">
                        @album.Artist
                    </i>
                </a>
            </div>
        }
    </div>
</div>